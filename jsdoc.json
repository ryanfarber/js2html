{
    "source": {
        "include": ["src", "README.md"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "search": true,
        "better-docs": {
            "name": "js2html",
            "title": "js2html",
            "hideGenerator": true,
            "navLinks": [
                {
                    "label": "Mozilla HTML Docs",
                    "href": "https://developer.mozilla.org/en-US/docs/Web/HTML"
                },
                {
                    "label": "W3 Schools HTML",
                    "href": "https://www.w3schools.com/html/default.asp"
                }
            ]
        }

    },
    "opts": {
        "template": "node_modules/better-docs",
        "readme": "./README.md",
        "destination": "docs/",
        "verbose": true
    }
}